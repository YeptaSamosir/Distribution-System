@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutAuth";
}
<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <form method="POST" enctype="multipart/form-data" asp-action="reset-password-account" asp-controller="auth">
                <h1> Distribution System</h1>
                <span class="text-danger">@TempData["Message"]</span>
                <input type="hidden"  value="@ViewBag.Email" name="EmailAccount"/>
                <div>
                    <input type="text" class="form-control" placeholder="New Password" name="NewPassword" required="" />
                </div>
                <div>
                    <button class="btn btn-success w-100" type="submit">
                        Reset Password
                    </button>
                    <a class="reset_pass" asp-action="login" asp-controller="auth">Back to Login</a>
                </div>

                <div class="clearfix"></div>
            </form>
        </section>
    </div>
</div>
