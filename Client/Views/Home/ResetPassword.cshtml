@{
    ViewData["Title"] = "Reset Password";
    Layout = "_LayoutAuth";
}
<div class="login_wrapper">
    <div class="animate form login_form">
        <section class="login_content">
            <form id="form-reset-password" enctype="multipart/form-data">
                <h1> Distribution System</h1>
                <span id="message" class="text-danger">@TempData["Message"]</span>
                <input id="inputEmail" type="hidden" value="@ViewBag.Email" name="EmailAccount"/>
                <div>
                    <input id="inputNewPassword" type="text" class="form-control" placeholder="New Password" name="NewPassword" />
                </div>
                <div>
                    <button class="btn btn-success w-100" type="submit">
                        Create new password
                    </button>
                    <a class="reset_pass" asp-action="login" asp-controller="auth">Back to Login</a>
                </div>

                <div class="clearfix"></div>
            </form>
        </section>
    </div>
</div>
