@{
    ViewData["Title"] = "Onboard Management";
    Layout = "_LayoutApp";
}
<div class="right_col" role="main">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/Admin">Home</a></li>
                    <li class="breadcrumb-item"><a href="~/Admin">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>

        <div class="col-12">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Onboard data</h2>
                    <ul class="nav navbar-right panel_toolbox flex-row-reverse">
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable-onboard" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="1%">No</th>
                                            <th>Candidate Name</th>
                                            <th>Email Candidate</th>
                                            <th>Company</th>
                                            <th>Postion</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Status Candidate</th>
                                            <th width="10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
<div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="editLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editLabel">Update Onboard</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form id="form-edit-onbaord">
                <input id="inputOnboardId" type="hidden" />
                <input id="inputStatusId" type="hidden" />
                <input id="inputCandidateId" type="hidden" />
                <input id="inputCompanyId" type="hidden" />
                <input id="inputDateStart" type="hidden" />

                <div class="modal-body">
                    <div class="form-group">
                        <label>Candidate Name</label>
                        <span id="candidateName" type="text" class="form-control"></span>
                    </div>
                    <div class="form-group">
                        <label>Email Candidate</label>
                        <span id="candidateEmail" type="text" class="form-control"></span>
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        <span id="companyName" type="text" class="form-control"></span>
                    </div>
                    <div class="form-group">
                        <label>Position</label>
                        <span id="jobTitle" type="text" class="form-control"></span>
                    </div>
                    <div class="form-group">
                        <label>Onbard Date Start</label>
                        <span id="dateStart" type="text" class="form-control"></span>
                    </div>
                    <div class="form-group">
                        <label for="inputStatus">Status</label>
                        <select id="inputStatus" class="form-control" onchange="showDateEnd();">
                            <option value="ONB-DN">Done</option>
                            <option value="ONB-OG">Onboard</option>
                        </select>
                    </div>
                    <div id="dateEndForm" class="form-group">
                        <label for="inputOnboardate">Onboard end on
                            <span id="DateNow"></span>
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>
