@{
    ViewData["Title"] = "Change Password";
    Layout = "_LayoutApp";

}
<!-- page content -->
<div class="right_col" role="main">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="~/admin">Admin</a></li>
                    <li class="breadcrumb-item"><a href="~/admin/settings">Setting</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>

        <div class="col-12">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>@ViewData["Title"] <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox flex-row-reverse">
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <br />
                    <form id="form-update-change-password" class="form-horizontal form-label-left">
                        <input id="accountEmail" type="hidden" value="@ViewBag.AccountEmail" />
                        <div class="form-group">
                            <label for="inputPassword">Current password</label>
                            <input id="inputPassword" type="text" class="form-control" value="">
                            <div class="invalid-feedback">
                                <span id="messagePassword"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputNewPassword">New password</label>
                            <input id="inputNewPassword" type="text" class="form-control" value="">
                            <div class="invalid-feedback">
                                <span id="messageNewPassword"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputConfirmPassword">Confirm new password</label>
                            <input id="inputConfirmPassword" type="text" class="form-control" value="">
                            <div class="invalid-feedback">
                                <span id="messageConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-12 col-sm-12">
                                <button type="submit" class="btn btn-success float-right">Change password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
