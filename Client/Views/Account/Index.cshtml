@{
    ViewData["Title"] = "Account Manajement";
    Layout = "_LayoutApp";
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="~/admin">Admin</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </nav>
        </div>

        <div class="col-12">
            <h3>@ViewData["Title"]</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Data Account</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modalCreate">New account registration</button>

                                <div id="modalCreate" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <div class="modal-header">
                                                <h4 class="modal-title" id="myModalLabel">New account registration</h4>
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <span aria-hidden="true">×</span>
                                                </button>
                                            </div>
                                            <form id="form-create-account" method="post">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label for="inputName">Full name</label>
                                                        <input id="inputName" type="text" class="form-control" value="">
                                                        <div class="invalid-feedback">
                                                            <span id="messageName"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputUsername">Username</label>
                                                        <input id="inputUsername" type="text" class="form-control" value="">
                                                        <div class="invalid-feedback">
                                                            <span id="messageUsername"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputEmail">Email</label>
                                                        <input id="inputEmail" type="text" class="form-control" value="">
                                                        <div class="invalid-feedback">
                                                            <span id="messageEmail"></span>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputPassword">Password</label>
                                                        <input id="inputPassword" type="password" class="form-control" value="">
                                                        <div class="invalid-feedback">
                                                            <span id="messagePassword"></span>
                                                        </div>
                                                        <span style="position: absolute; right: 30px; top: 280px;" onclick="hideshow()">
                                                            <i id="slash" class="fa fa-eye-slash"></i>
                                                            <i id="eye" class="fa fa-eye"></i>
                                                        </span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="inputRole">Role</label>
                                                        <div class="form-check">
                                                            <div id="inputRole"></div>
                                                        </div>
                                                        <div class="invalid-feedback d-block">
                                                            <span id="messageRoles"></span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                    <button type="submit" class="btn btn-success">Create</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                <table id="datatable-account" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th width="1%">No</th>
                                            <th>Name</th>
                                            <th>Email</th>
                                            <th>Username</th>
                                            <th>Role Account</th>
                                            <th width="10%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalEdit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Edit account</h4>
                
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <form id="form-edit-account" method="post">
                <input id="inputAccountId" type="hidden" />
                <div class="modal-body">
                    <p><span>Last update :<i id="terakhirUpdate">-</i></span></p>
                    <div class="form-group">
                        <label for="inputNameEdit">Full name</label>
                        <input id="inputNameEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageNameEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputUsernameEdit">Username</label>
                        <input id="inputUsernameEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageUsernameEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputEmailEdit">Email</label>
                        <input id="inputEmailEdit" type="text" class="form-control" value="">
                        <div class="invalid-feedback">
                            <span id="messageEmailEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputRoleEdit">Role</label>
                        <div class="form-check">
                            <div id="inputRoleEdit"></div>
                        </div>
                        <div class="invalid-feedback d-block">
                            <span id="messageRolesEdit"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputIsActiveEdit">Is active</label>
                        <select id="inputIsActiveEdit" class="form-control">
                            <option value="false">Inactive</option>
                            <option value="true">Active</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- /page content -->
